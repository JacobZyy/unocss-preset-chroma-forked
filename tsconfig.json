{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "declaration": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "paths": {
      "unocss-preset-chroma": ["./src"]
    }
  },
  "include": ["./src/**/*.ts", "./tests/**/*"],
  "exclude": ["**/node_modules/**"]
}
